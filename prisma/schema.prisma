generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(uuid())
  email                String   @unique
  password             String?  // Optional for now to support existing users or OAuth later
  name                 String?
  role                 String   @default("USER") // ADMIN, USER
  minutes              Int      @default(0)
  totalHoursPurchased  Int      @default(0) // Total hours purchased (for leveling)
  level                Int      @default(0) // Current level
  achievementsUnlocked String[] @default([]) // Array of achievement IDs
  createdAt            DateTime @default(now())
  reservations         Reservation[]
  purchases            Purchase[]
}

model PC {
  id          String   @id @default(uuid())
  name        String
  status      String   @default("AVAILABLE") // AVAILABLE, MAINTENANCE, BUSY
  parsecLink  String?  // The daily updated link
  createdAt   DateTime @default(now())
  reservations Reservation[]
}

model Reservation {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  pcId      String
  pc        PC       @relation(fields: [pcId], references: [id])
  startTime DateTime
  endTime   DateTime
  status    String   @default("CONFIRMED") // CONFIRMED, CANCELLED
  gameId    String?
  game      Game?    @relation(fields: [gameId], references: [id])
  linkSent  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Game {
  id        String   @id @default(uuid())
  name      String
  imageUrl  String?
  active    Boolean  @default(true)
  maxCopies Int      @default(1) // Maximum simultaneous copies/licenses available
  createdAt DateTime @default(now())
  reservations Reservation[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Int
  minutes     Int      @default(60)
  type        String
  description String
  popular     Boolean  @default(false)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  purchases   Purchase[]
}

model SystemSettings {
  id              String @id @default(uuid())
  generalDiscount Int    @default(0) // 0, 5, 10, 15, 20
}

model Purchase {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  amount    Int
  status    String   @default("COMPLETED") // PENDING, COMPLETED, FAILED
  paymentId String?  @unique // External payment ID (e.g., MP-123456)
  createdAt DateTime @default(now())
}

model Achievement {
  id          String   @id @default(uuid())
  name        String   // "Novato", "Aficionado", etc.
  description String   // "Alcanzaste 10 horas compradas"
  milestone   Int      // 10, 25, 50, etc. (in hours)
  reward      Int      // Bonus hours to award
  icon        String?  // Optional icon/badge
  createdAt   DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}
